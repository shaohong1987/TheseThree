<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shaohong.thesethree.modules.course.CourseExamResultActivity">

    <Button
        android:id="@+id/close_button_exam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/result_course_exam_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试得分：100分"
        android:textSize="@dimen/large_font_size"
        app:layout_constraintBottom_toTopOf="@id/close_button_exam"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</android.support.constraint.ConstraintLayout>
